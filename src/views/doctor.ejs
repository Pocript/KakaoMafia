    <div><button id="submit" onclick="submit()">완료</button></div>
       </div> 
    
    </div>
    
</div>
<script>
 
 var checked;
 function submit(){
     $("input:checkbox[name=form]:checked").each(function(){
    	checked = $(this).val();
    	$.ajax({
	            type: "POST", //요청 메소드 방식
	            url:"/skil/doctor",
	            dataType:"text", 
	            data:{
	              'checked':checked  
	            },
	            success : function(result){
	                if(result==='already'){
	                    alert('이미 선택했습니다..')
	                    return;
	                }else{
		            location.href = 'http://asj.dothome.co.kr/?kakaotalk://inappbrowser/close'
	                }
	           },
	            error : function(a, b, c){
		            alert(a + b + c);
	           }
            });
    });
 }
 
$(document).ready(function() {
 
 $('input[type="checkbox"][name="form"]').click(function(){
 
  if($(this).prop('checked')){
 
     $('input[type="checkbox"][name="form"]').prop('checked',false);
 
     $(this).prop('checked',true);
 
    }
  
   });
  
 });
   
</script>

</body>