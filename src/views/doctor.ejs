    <style>
        input[type="checkbox"]{
        display: none;
      }
input[type="checkbox"] + label{
        width: 24vw;
        height: 24vw;
        border:0.25rem solid gray;
        border-right:0.25rem solid gray;
        position: relative;
      }
input[type="checkbox"]:checked + label::after{
        content:'';
        background-image:url(/static/doctor.png);
        background-size:100% auto;
        font-size: 25px;
        width: 24vw;
        height: 24vw;
        text-align: center;
        position: absolute;
        left: 0;
        top:0
      }
      label{
          display: block;
          float: left;
          font-size: 2rem;
        }
      #submit{
          width: 20rem;
          height: 2.5rem;
          border: none;
          border-radius: 0.5rem;
          
          margin: 0 auto;
          margin-top: 2rem;
          font-size: 1.5rem;
          background: #5d1210;
          color: white;
          border: 0.1rem solid white;
          
      }
    </style>
</head>
<body>
<div>
